
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= errors %>
  <% end %>
<% end %>

<%= form_for @blogger do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
    <div>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>

<% end %>